<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed %>
    <i class='far fa-check-square'></i>
    <%= link_to task.title, task_path(task) %>
    <i class="far fa-trash-alt"><%= link_to "Delete", task_path(task.id),
      method: :delete,
      data: { confirm: "Delete #{task.title}?" } %></i>
  <% else %>
    <i class='far fa-square'></i>
    <%= link_to task.title, task_path(task) %>
    <i class="far fa-trash-alt"><%= link_to "Delete", task_path(task.id),
      method: :delete,
      data: { confirm: "Delete #{task.title}?" } %></i>
  <% end %>
<% end %>


<%= link_to 'Add a new task', new_task_path %>
