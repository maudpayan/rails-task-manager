<h1>Edit a task</h1>

<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title, 'What is your task?'%>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :detail, 'Describe your task' %>
  <%= f.text_field :detail, class: 'form-control' %>
</div>

  <%= f.label :completed, 'do you have completed your task?' %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>


<p><%=  link_to 'Back to list', tasks_path %></p>
